<p id="notice"><%= notice %></p>

<h1>Listing Songs</h1>
<div class="col-md-6">
<h1> Canciones: <%= @user.name %> </h1>
<%= link_to 'New User song', new_user_song_path %>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Duration</th>
      <th>Genre</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @user_songs.each do |song| %>
      <tr>
        <td><%= user_song.name %></td>
        <td><%= user_song.duration %></td>
        <td><%= user_song.genre_id %></td>
        <td><%= link_to 'Show', user_song %></td>
        <td><%= link_to 'Edit', edit_user_song_path(user_song) %></td>
        <td><%= link_to 'Destroy', user_song, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<div>
	<% if (params[:user_id].to_i == current_user.id) %>
  <div class="col-md-6">
    <div class="well">
    <% Song.all.each do |song| %>
      <p>
        <%= form_for(UserSong.new) do |f| %>
          <%= f.label :song_id, song.name %>
          <%= f.hidden_field :song_id, value: song.id %>
          <%= f.submit "Agregar", class:"btn btn-primary btn-sm" %>
        <% end %>
      </p>
    <% end %>
  </div>
  </div>
<% end %>
</div>
